<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util
                           http://www.springframework.org/schema/util/spring-util-2.0.xsd">

    <util:list id="caches">
        <bean class="org.apache.ignite.configuration.CacheConfiguration">
            <property name="name" value="M2_PRODUCT_CACHE"/>
            <property name="atomicityMode" value="TRANSACTIONAL"/>
            <property name="backups" value="1"/>
            <property name="eagerTtl" value="true" />
            <property name="statisticsEnabled" value="true"/>

            <!-- node filter to selectively deploy caches only on nodes whose "role" attribute is set to "data" (as opposed to "worker") -->
            <!--<property name="nodeFilter">-->
                <!--<bean class="com.fitness.datagrid.DataNodeFilter"/>-->
            <!--</property>-->

            <property name="queryEntities">
                <list>
                    <bean class="org.apache.ignite.cache.QueryEntity">
                        <!-- set the keyType "if your cache IS Affinity aware -->
                        <!--<property name="keyType" value="java.lang.String" />-->
                        <property name="keyType" value="java.lang.Long" />
                        <!-- provide the full path to your pojo  -->
                        <!--<property name="valueType" value="com.fitness.dataservices.product.dto.v1.M2Product" />-->
                        <property name="valueType" value="org.apache.ignite.piclient.model.values.AllTypes" />
                        <!-- list all your fields  -->
                        <property name="fields">
                            <map>
                                <!--<entry key="cartId" value="java.lang.String"/>-->
                                <!--<entry key="productDTO.productCode" value="java.lang.Integer"/>-->
                                <!--<entry key="productDTO" value="com.fitness.dataservices.product.transport.v1.ProductDTO"/>                                -->
                                <entry key="strCol" value="java.lang.String"/>
                                <entry key="InnerTypes.longInnerCol" value="java.lang.Long"/>
                                <entry key="InnerTypes" value="org.apache.ignite.piclient.model.values.AllTypes.InnerTypes"/>
                            </map>
                        </property>
                        <!-- cache id and all parent ids(FKs) should be indexed -->
                        <property name="indexes">
                            <list>
                                <bean class="org.apache.ignite.cache.QueryIndex">
                                    <constructor-arg>
                                        <list>
                                            <!--<value>cartId</value>-->
                                            <!--<value>productDTO.productCode</value>-->
                                            <value>strCol</value>
                                            <value>InnerTypes.longInnerCol</value>
                                        </list>
                                    </constructor-arg>
                                    <constructor-arg value="SORTED"/>
                                </bean>
                            </list>
                        </property>
                    </bean>
                </list>
            </property>

            <property name="expiryPolicyFactory">
                <bean class="javax.cache.expiry.CreatedExpiryPolicy" factory-method="factoryOf">
                    <constructor-arg>
                        <bean class="javax.cache.expiry.Duration">
                            <constructor-arg value="MINUTES"/>
                            <constructor-arg value="1"/>
                        </bean>
                    </constructor-arg>
                </bean>
            </property>

        </bean>

        <bean class="org.apache.ignite.configuration.CacheConfiguration">
            <property name="name" value="M2_PRODUCT_CACHE_NO_INDEX"/>
            <property name="atomicityMode" value="TRANSACTIONAL"/>
            <property name="eagerTtl" value="true" />
            <property name="backups" value="1"/>
            <property name="statisticsEnabled" value="true"/>

            <property name="queryEntities">
                <list>
                    <bean class="org.apache.ignite.cache.QueryEntity">
                        <property name="keyType" value="java.lang.Long" />
                        <property name="valueType" value="org.apache.ignite.piclient.model.values.AllTypes" />
                    </bean>
                </list>
            </property>

            <property name="expiryPolicyFactory">
                <bean class="javax.cache.expiry.CreatedExpiryPolicy" factory-method="factoryOf">
                    <constructor-arg>
                        <bean class="javax.cache.expiry.Duration">
                            <constructor-arg value="MINUTES"/>
                            <constructor-arg value="1"/>
                        </bean>
                    </constructor-arg>
                </bean>
            </property>

        </bean>

        <bean class="org.apache.ignite.configuration.CacheConfiguration">
            <property name="name" value="M2_PRODUCT_CACHE_NO_QENT"/>
            <property name="eagerTtl" value="true" />
            <property name="atomicityMode" value="TRANSACTIONAL"/>
            <property name="backups" value="1"/>
            <property name="statisticsEnabled" value="true"/>

            <property name="expiryPolicyFactory">
                <bean class="javax.cache.expiry.CreatedExpiryPolicy" factory-method="factoryOf">
                    <constructor-arg>
                        <bean class="javax.cache.expiry.Duration">
                            <constructor-arg value="MINUTES"/>
                            <constructor-arg value="1"/>
                        </bean>
                    </constructor-arg>
                </bean>
            </property>

        </bean>

        <bean class="org.apache.ignite.configuration.CacheConfiguration">
            <property name="name" value="M2_PRODUCT_CACHE_NO_QENT_NO_STAT"/>
            <property name="eagerTtl" value="true" />
            <property name="atomicityMode" value="TRANSACTIONAL"/>
            <property name="backups" value="1"/>
            <property name="statisticsEnabled" value="false"/>

            <property name="expiryPolicyFactory">
                <bean class="javax.cache.expiry.CreatedExpiryPolicy" factory-method="factoryOf">
                    <constructor-arg>
                        <bean class="javax.cache.expiry.Duration">
                            <constructor-arg value="MINUTES"/>
                            <constructor-arg value="1"/>
                        </bean>
                    </constructor-arg>
                </bean>
            </property>

        </bean>

        <bean class="org.apache.ignite.configuration.CacheConfiguration">
            <property name="name" value="M2_PRODUCT_CACHE_NO_QENT_NO_STAT_PART_FULLSYNC"/>
            <property name="cacheMode" value="PARTITIONED"/>
            <property name="writeSynchronizationMode" value="FULL_SYNC"/>
            <property name="eagerTtl" value="true" />
            <property name="atomicityMode" value="TRANSACTIONAL"/>
            <property name="backups" value="1"/>
            <property name="statisticsEnabled" value="false"/>

            <property name="expiryPolicyFactory">
                <bean class="javax.cache.expiry.CreatedExpiryPolicy" factory-method="factoryOf">
                    <constructor-arg>
                        <bean class="javax.cache.expiry.Duration">
                            <constructor-arg value="MINUTES"/>
                            <constructor-arg value="1"/>
                        </bean>
                    </constructor-arg>
                </bean>
            </property>

        </bean>


        <bean class="org.apache.ignite.configuration.CacheConfiguration">
            <property name="name" value="M2_PRODUCT_CACHE_NO_QENT_NO_STAT_PART_FULLSYNC_MODIFY"/>
            <property name="cacheMode" value="PARTITIONED"/>
            <property name="writeSynchronizationMode" value="FULL_SYNC"/>
            <property name="eagerTtl" value="true" />
            <property name="atomicityMode" value="TRANSACTIONAL"/>
            <property name="backups" value="1"/>
            <property name="statisticsEnabled" value="false"/>

            <property name="expiryPolicyFactory">
                <bean class="javax.cache.expiry.ModifiedExpiryPolicy" factory-method="factoryOf">
                    <constructor-arg>
                        <bean class="javax.cache.expiry.Duration">
                            <constructor-arg value="MINUTES"/>
                            <constructor-arg value="1"/>
                        </bean>
                    </constructor-arg>
                </bean>
            </property>

        </bean>


    </util:list>
</beans>
